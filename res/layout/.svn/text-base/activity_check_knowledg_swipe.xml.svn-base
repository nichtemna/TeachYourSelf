<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/swipe_relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity" >

    <TextView
        android:id="@+id/textViewDict"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:paddingLeft="5dp"
        android:text="@string/select_dictionary" />

    <Spinner
        android:id="@+id/sDictionary"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textViewDict" />

    <RelativeLayout
        android:id="@+id/swipe_mainRelativeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/sDictionary" >

        <LinearLayout
            android:id="@+id/swipe_linearLayout"
            android:layout_width="150dip"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/answer1_tv"
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_margin="5dip"
                android:layout_weight="1"
                android:background="@drawable/check_knowledge_item"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:gravity="center"
                android:padding="3dip"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/answer2_tv"
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_margin="5dip"
                android:layout_weight="1"
                android:background="@drawable/check_knowledge_item"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:gravity="center"
                android:padding="3dip"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/answer3_tv"
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_margin="5dip"
                android:layout_weight="1"
                android:background="@drawable/check_knowledge_item"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:gravity="center"
                android:padding="3dip"
                android:visibility="invisible" />
        </LinearLayout>

        <TextView
            android:id="@+id/word_tv"
            android:layout_width="100dip"
            android:layout_height="100dip"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_margin="5dip"
            android:background="@drawable/check_knowledge_item"
            android:gravity="center"
            android:padding="3dip"
            android:visibility="visible" />

        <TextView
            android:id="@+id/tip_tv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_margin="20dip"
            android:background="@drawable/check_knowledge_item"
            android:gravity="center"
            android:padding="3dip"
            android:visibility="invisible" />
    </RelativeLayout>

</RelativeLayout>